{
  "name": "preact-simple-starter",
  "version": "0.2.0",
  "description": "Ready-to-go Preact + Redux Simple starter, powered by webpack 2.",
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack-dashboard -- webpack-dev-server",
    "start": "superstatic build -p 9999 --host 0.0.0.0 --gzip -c '{\"rewrites\": [{\"source\":\"**\",\"destination\":\"index.html\"}],\"headers\":[{\"source\":\"**\",\"headers\":[{\"key\":\"Cache-Control\",\"value\":\"max-age=86400\"}]}]}'",
    "prestart": "npm run -s build",
    "build": "cross-env NODE_ENV=production webpack -p --progress",
    "prebuild": "rm -rf build mkdirp build",
    "test": "karma start test/karma.conf.js --single-run",
    "test:watch": "karma start test/karma.conf.js --auto-watch",
    "push-surge": "npm run -s build && surge ./build -d preact-app.surge.sh"
  },
  "keywords": [
    "preact",
    "react",
    "preact-compat",
    "redux",
    "sass",
    "yarn"
  ],
  "license": "MIT",
  "author": "Ademola Adegbuyi <marhyorh@gmail.com>",
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel": "^6.5.2",
    "babel-core": "^6.20.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.9",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-react-jsx": "^6.8.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-0": "6.16.0",
    "babel-register": "^6.18.0",
    "chai": "^3.5.0",
    "compression-webpack-plugin": "^0.3.2",
    "copy-webpack-plugin": "^4.0.1",
    "cross-env": "^3.1.3",
    "css-loader": "^0.26.1",
    "enzyme": "^2.7.0",
    "eslint": "^3.12.2",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-react": "^6.8.0",
    "extract-text-webpack-plugin": "2.0.0-beta.4",
    "file-loader": "^0.9.0",
    "html-webpack-plugin": "^2.24.1",
    "isparta-loader": "^2.0.0",
    "json-loader": "^0.5.4",
    "karma": "^1.4.0",
    "karma-chai": "^0.1.0",
    "karma-chai-sinon": "^0.1.5",
    "karma-coverage": "^1.1.1",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.1",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.1",
    "mkdirp": "^0.5.1",
    "mocha": "^3.2.0",
    "node-sass": "^4.0.0",
    "offline-plugin": "^4.5.3",
    "postcss-loader": "^1.2.1",
    "raw-loader": "^0.5.1",
    "sass-loader": "^4.0.2",
    "sinon": "^1.17.7",
    "sinon-chai": "^2.8.0",
    "source-map-loader": "^0.1.6",
    "superstatic": "^4.0.3",
    "url-loader": "^0.5.7",
    "webpack": "2.2.0",
    "webpack-dashboard": "^0.2.1",
    "webpack-dev-server": "2.2.0",
    "webpack-manifest-plugin": "^1.1.0"
  },
  "dependencies": {
    "material-design-lite": "^1.2.1",
    "preact": "^7.1.0",
    "preact-compat": "^3.9.4",
    "preact-mdl": "^1.3.1",
    "preact-redux": "^1.2.0",
    "react-helmet": "^3.2.3",
    "react-router": "^3.0.0",
    "react-router-redux": "^4.0.7",
    "redux": "^3.6.0"
  }
}
