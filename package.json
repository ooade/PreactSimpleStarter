{
  "name": "preact-simple-starter",
  "version": "0.2.1",
  "description": "Ready-to-go Preact + Redux Simple starter, powered by webpack 2.",
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack-dashboard -- webpack-dev-server",
    "start": "superstatic build -p 9999 --host 0.0.0.0 --gzip -c '{\"rewrites\": [{\"source\":\"**\",\"destination\":\"index.html\"}],\"headers\":[{\"source\":\"**\",\"headers\":[{\"key\":\"Cache-Control\",\"value\":\"max-age=86400\"}]}]}'",
    "prestart": "npm run -s build",
    "build": "cross-env NODE_ENV=production webpack -p --progress",
    "prebuild": "rm -rf build mkdirp build",
    "test": "karma start test/karma.conf.js --single-run",
    "test:watch": "karma start test/karma.conf.js --auto-watch",
    "push-surge": "npm run -s build && surge ./build -d preact-app.surge.sh"
  },
  "keywords": [
    "preact",
    "react",
    "preact-compat",
    "redux",
    "sass",
    "yarn"
  ],
  "license": "MIT",
  "author": "Ademola Adegbuyi <marhyorh@gmail.com>",
  "devDependencies": {
    "autoprefixer": "^7.0.1",
    "babel": "^6.5.2",
    "babel-core": "^6.20.0",
    "babel-eslint": "^8.0.0",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-react-jsx": "^6.8.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-0": "6.24.1",
    "babel-register": "^6.18.0",
    "chai": "^4.1.0",
    "compression-webpack-plugin": "^1.0.0",
    "copy-webpack-plugin": "^4.0.1",
    "cross-env": "^5.0.0",
    "css-loader": "^0.28.0",
    "enzyme": "^2.7.0",
    "eslint": "^4.7.1",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-react": "^7.0.0",
    "extract-text-webpack-plugin": "2.1.0",
    "html-webpack-plugin": "^2.24.1",
    "isparta-loader": "^2.0.0",
    "karma": "^1.7.0",
    "karma-chai": "^0.1.0",
    "karma-chai-sinon": "^0.1.5",
    "karma-coverage": "^1.1.1",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.1",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.1",
    "mkdirp": "^0.5.1",
    "mocha": "^3.3.0",
    "node-sass": "^4.5.2",
    "offline-plugin": "^4.5.3",
    "postcss-loader": "^2.0.5",
    "sass-loader": "^6.0.3",
    "script-ext-html-webpack-plugin": "^1.5.0",
    "sinon": "^3.0.0",
    "sinon-chai": "^2.8.0",
    "source-map-loader": "^0.2.0",
    "superstatic": "^5.0.0",
    "url-loader": "^0.5.7",
    "webpack": "^3.0.0",
    "webpack-dashboard": "^1.0.0-3",
    "webpack-dev-server": "^2.5.0",
    "webpack-manifest-plugin": "^1.1.0"
  },
  "dependencies": {
    "material-design-lite": "^1.2.1",
    "preact": "^8.1.0",
    "preact-compat": "^3.9.4",
    "preact-mdl": "^2.2.0",
    "preact-redux": "^2.0.0",
    "preact-router": "^2.4.5",
    "react-helmet": "^5.0.0",
    "redux": "^3.6.0"
  }
}
